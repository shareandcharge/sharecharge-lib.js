{
  "name": "sharecharge-lib",
  "version": "0.1.0",
  "description": "Share & Charge EV Network Library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/motionwerkGmbH/sharecharge-lib.git"
  },
  "author": "MotionWerk GmbH",
  "license": "LGPL-3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "install": "rm -rf dist && npm run build-ts",
    "start": "node dist/server.js",
    "build": "npm run build-ts && npm run tslint",
    "deploy": "rm -rf dist && npm run build && npm pack",
    "dts-gen": "dts-gen",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "test-watch": "mocha --watch --watch-extensions ts,js,json -r ts-node/register test/**/*.spec.ts",
    "unit-test": "mocha -r ts-node/register test/unit/**/*.spec.ts",
    "integration-test": "mocha -r ts-node/register test/integration/**/*.spec.ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "webpack": "webpack",
    "geth-dev": "geth --dev --datadir=../.chaindata --dev.period 1 --rpc --rpcaddr 0.0.0.0 --ws --wsaddr 0.0.0.0 --wsorigins=* --wsapi=eth,personal,net,pubsub",
    "patch-contract": "cp ~/.sharecharge/contract.defs.local.json node_modules/sharecharge-contracts/contract.defs.local.json"
  },
  "dependencies": {
    "@types/node": "^9.4.7",
    "bip39": "^2.5.0",
    "ethereumjs-tx": "^1.3.4",
    "ethereumjs-wallet": "^0.6.0",
    "rxjs": "^5.5.7",
    "sharecharge-contracts": "git+ssh://git@github.com/motionwerkGmbH/sharecharge-contracts.git#domain",
    "web3": "1.0.0-beta.33"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/sinon": "^4.3.0",
    "chai": "^4.1.2",
    "dts-gen": "^0.5.7",
    "mocha": "^5.0.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "sinon": "^4.4.8"
  }
}
