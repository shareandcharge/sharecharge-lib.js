  "scripts": {
    "start": "node dist/server.js",
    "build": "npm run build-ts && npm run tslint",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
