{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "declaration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "logs",
    "dist",
    "test",
    "examples"
  ]
}
